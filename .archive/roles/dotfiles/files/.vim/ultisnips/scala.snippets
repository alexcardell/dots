snippet if "if"
if (${1}) {
	${0:${VISUAL:?}}
}
endsnippet

snippet "if(el|e)" "if else" r
if (${1}) {
	${2:${VISUAL:?}}
} else {
	${3:?}
}
endsnippet

snippet for "for comprehension"
for {
	${2:_} <- ${1:?}
} yield ${3:()}
endsnippet

snippet def "def" b
def ${1:function}(${2}): ${3:T} = {
	${0:${VISUAL:?}}
}
endsnippet

snippet arg "argument"
${1:?}: ${2:T}${3:, arg}
endsnippet

snippet "mat(ch|c)?" "match" r
${1:?} match {
	case ${2:?} => ${3:?}
}
endsnippet

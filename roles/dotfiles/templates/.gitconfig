# {{ ansible_managed }}

[user]
{% if git_user_name != '' %}
  name = {{ git_user_name }}
{% endif %}
{% if git_user_email != '' %}
  email = {{ git_user_email }}
{% endif %}

[alias]
  a = add
  aa = add --all
  alias = config --get-regexp ^alias\\.
  amn = commit --amend
  br = branch
  ci = commit -v
  cinov = commit -v --no-verify
  co = checkout
  cp = cherry-pick
  f = fetch
  lg = log --graph --oneline --decorate --all
  ls = log -n 20 --pretty=format:'%C(yellow)%h%Creset %s -- %C(bold italic magenta)<%cn>%Creset %C(blue)[%ad]%Creset %C(red)%d' --date=relative
  p = pull
  root = rev-parse --show-toplevel
  st = status
  sub = submodule

[color]
  ui = auto

[color "status"]
  added = green
  changed = red
  untracked = blue

[core]
  editor = nvim
  excludesfile = ~/.gitignore
  pager = less -S --chop-long-lines

[merge]
  tool = nvimdiff
[mergetool]
  prompt = true
[mergetool "nvimdiff"]
  cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[difftool]
  prompt = true
[diff]
  tool = nvimdiff

{
  "codeLens.enable": true,
  "languageserver": {
     "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
     },
     "scala": {
      "command": "metals-vim",
      "filetypes": ["scala", "sbt"],
      "rootPatterns": ["build.sbt"]
     },
     "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "java.errors.incompleteClasspath.severity": "ignore",
  "python.jediEnabled": false
}
